{
  "files": [
    "./globals.d.ts"
  ],
  "compilerOptions": {
    "alwaysStrict": true,
    "checkJs": true,
    "target": "es2016",
    "module": "es2015",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "baseUrl": "./",  // all paths are relative to the baseUrl
    "paths": {
      "@/*" : ["*"],   // resolve any `@/foo/bar` to `<baseUrl>/foo/bar`
      "~/*" : ["*"]    // resolve any `~/foo/bar` to `<baseUrl>/foo/bar`
    }
  },
  "typeAcquisition": {
    "enable": true,
    "include": [
      "firebase",
      "vue-router"
    ]
  },
  "include": [
    "**/*",
    "**/*.vue"
  ]
}
